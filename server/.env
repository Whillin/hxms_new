PORT=3002

# MySQL 连接（本地安装，默认端口 3306）
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_DB=hxms_dev

# TypeORM 在开发环境自动建表
TYPEORM_SYNC=true
TYPEORM_LOGGING=error,schema

# Redis 连接（本地）
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# 功能开关：禁用线索保存走队列，改为直写
FEATURE_ENABLE_QUEUE_SAVE_CLUE=false

# 渠道严格校验：仅允许引用已存在渠道，未匹配则报错
FEATURE_ENABLE_STRICT_CHANNEL_LOOKUP=true

# 启用示例数据播种（管理员用户/员工/产品）
SEED_ENABLED=true

# JWT 配置（使用默认即可）
JWT_SECRET=hxms_dev_secret
JWT_EXPIRES_IN=2h